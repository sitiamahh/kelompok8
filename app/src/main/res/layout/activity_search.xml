                android:id="@+id/cvSepatu1"
                android:layout_below="@id/tvHasilPencarian"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginEnd="6dp"
                app:strokeColor="@color/white">

